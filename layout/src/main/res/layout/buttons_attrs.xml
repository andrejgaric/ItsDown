        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:layout_weight="1"
        android:src="@drawable/attribute_red"
        android:visibility="visible"/>

    <ImageButton
        android:id="@+id/button_attr_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:layout_weight="1"
        android:src="@drawable/attribute_yellow"
        android:visibility="visible"/>

    <ImageButton
        android:id="@+id/button_attr_3"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:src="@drawable/attribute_blue"/>

    <ImageButton
        android:id="@+id/button_attr_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:visibility="visible"
        android:src="@drawable/attribute_green"/>

    <ImageButton
        android:id="@+id/button_attr_5"
